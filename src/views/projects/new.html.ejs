<div class="content">
  <h1>Nuevo Proyecto</h1>
  <form method="post" enctype="multipart/form-data">
    <input type="text" id="name" name="name" placeholder="Nombre" value="<%= project.name %>" required><br><br>

    <input type="text" id="contactInfo" name="contactInfo" placeholder="Información de contacto" value="<%= project.contactInfo %>" required><br><br>

    <textarea type="text" id="description" name="description" placeholder="Descripción" required><%= project.description %></textarea><br><br>

    <div class="field">
      <label for="img">Imagen</label>
      <input type="file" name="img">
    </div>
    <label for="organizationId">Organización</label>
    <% if (source) { %>
      <select id = "organizationId" name= "organizationId" value= <%=source.id %> required>
        <option value = "<%=source.id%>" selected> <%= source.name %> </option>
    <% } else { %>
      <select id = "organizationId" name= "organizationId" required>
    <% } %>
    <% organizations.forEach((organization) => { %>
      <% if (source!==organization) { %>
      <option value = "<%= organization.id %>"> <%= organization.name %> </option>
      <% } %>
    <% }); %>
    </select>
    <br>

    <input type="submit" value="Submit">
  </form>
</div>
