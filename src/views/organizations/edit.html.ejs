<div class="content">
  <h1>Editar Organización</h1>
  <form method="post">
    <input type="hidden" name="_method" value="patch">

    <input type="text" id="name" name="name" placeholder="Nombre" value="<%= organization.name %>" required><br><br>

    <textarea type="text" id="description" name="description" placeholder="Descripción" required><%= organization.description %></textarea><br><br>

    <input type="submit" value="Submit">
  </form>
</div>
