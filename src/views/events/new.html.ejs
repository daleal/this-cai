<div class="content">
  <h1>Nuevo Evento</h1>
  <form method="post">
    <input type="text" id="name" name="name" placeholder="Nombre" value="<%= event.name %>" required><br><br>

    <input type="text" id="location" name="location" placeholder="Ubicación" value="<%= event.location %>" required><br><br>

    <input type="datetime-local" id="dateAndTime" name="dateAndTime" placeholder="Fecha y hora" value="<%= event.dateAndTime.toISOString().replace("Z","") %>" required><br><br>

    <input type="text" id="category" name="category" placeholder="Categoría" value="<%= event.category %>" required><br><br>

    <input type="submit" value="Submit">
  </form>
</div>
