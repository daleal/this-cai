    <input type="text" id="name" name="name" placeholder="Nombre" required><br><br>

    <input type="text" id="location" name="location" placeholder="Ubicación" required><br><br>

    <input type="datetime-local" id="dateAndTime" name="dateAndTime" placeholder="Fecha y hora" required><br><br>

