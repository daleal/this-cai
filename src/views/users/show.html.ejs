              <% organizations.forEach((organization) => { %>
                <div class="column is-4">
                  <div class="card is-round profile-organization-sub-card invisible-profile-card">
                    <header class="card-header">
                      <div class="card-image is-1x1">
                        <img src="<%= organization.image %>" alt="">
                      </div>
                      <div class="card-header-title is-centered">
                        <%= organization.name %>
                      </div>
                    </header>
                    <div class="card-content is-centered">
                      <a href="<%= orgPath(organization) %>" class="button">
                        Visitar!
                      </a>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        <% } else { %>
          <header class="card-header">
